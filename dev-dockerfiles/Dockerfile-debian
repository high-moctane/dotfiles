FROM buildpack-deps:latest

RUN curl -L mocdot.ml | make apt -f - PROTOCOL=https DOCKER=T
RUN curl -L mocdot.ml | make brew-setup -f - PROTOCOL=https DOCKER=T
RUN curl -L mocdot.ml | make brew-install -f - PROTOCOL=https DOCKER=T
RUN curl -L mocdot.ml | make all -f - PROTOCOL=https DOCKER=T
RUN curl -L mocdot.ml | make asdf-install -f - PROTOCOL=https DOCKER=T

WORKDIR /root

CMD ["/bin/bash"]
